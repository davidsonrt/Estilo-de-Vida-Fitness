<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".RegistarActivity">
   name="Theme.NoTitleBar" parent="Theme.AppCompat.Ligth.NoActionBar">

    <ScrollView
        android:id="@+id/scrollView5"
        android:layout_width="398dp"
        android:layout_height="405dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/meta"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/bungee_inline"
                android:gravity="center"
                android:text="nome: *"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/idregisternome"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="#FFFFFF"
                android:drawableLeft="@drawable/ic_action_usuarioname"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="#FFFFFF"
                android:textSize="27dp" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/bungee_inline"
                android:gravity="center"
                android:text="sexo *"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />

            <RadioGroup
                android:id="@+id/idgenero"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/btfeminino"
                    android:layout_width="213dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:buttonTint="#FFFFFF"
                    android:gravity="center"
                    android:text="feminino"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp" />

                <RadioButton
                    android:id="@+id/btmasculino"
                    android:layout_width="213dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:buttonTint="#FFFFFF"
                    android:gravity="center"
                    android:text="masculino"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    app:layout_constraintStart_toStartOf="parent" />
            </RadioGroup>

            <androidx.cardview.widget.CardView
                android:id="@+id/idregistrar2"
                android:layout_width="299dp"
                android:layout_height="44dp"
                android:layout_gravity="center"

                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="25dp"
                app:cardElevation="10dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="AvanÃ§ar"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>