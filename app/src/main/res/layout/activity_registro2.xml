<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".Registro2">

    <ScrollView
        android:id="@+id/scrollView5"
        android:layout_width="386dp"
        android:layout_height="342dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/bungee_inline"
                android:gravity="center"
                android:text="Selecione sua meta:"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />

            <RadioGroup
                android:id="@+id/idgenero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/idmassa2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:width="300dp"
                    android:buttonTint="#FFFFFF"
                    android:gravity="center"
                    android:text="massa muscular"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/idemagrecer2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:width="300dp"
                    android:buttonTint="#FFFFFF"
                    android:gravity="center"
                    android:text="emagrecer"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/idresistencia2"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:width="250dp"
                    android:buttonTint="#FFFFFF"
                    android:gravity="center"
                    android:text="melhorar resistência física"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />
            </RadioGroup>

            <androidx.cardview.widget.CardView
                android:id="@+id/idregistrar2"
                android:layout_width="299dp"
                android:layout_height="44dp"
                android:layout_gravity="center_horizontal"

                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="25dp"
                app:cardElevation="10dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Avançar"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>