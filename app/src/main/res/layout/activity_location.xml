<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_location"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".location">

    <TextView
        android:id="@+id/tv_timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="00:00:00"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:visibility="visible"
        tools:visibility="visible" />

    <Button
        android:id="@+id/request_location_updates_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#CB2B86CD"
        android:text="@string/request_location_updates" />

    <Button
        android:id="@+id/remove_location_updates_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:backgroundTint="#C9F44336"
        android:text="@string/remove_location_updates" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="283dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/exercise" />

            <TextView
                android:id="@+id/resultxt"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold"
                android:visibility="visible"
                tools:visibility="visible" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView22"
                android:layout_width="57dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/speedometer2" />

            <TextView
                android:id="@+id/resultxtvel"
                android:layout_width="130dp"
                android:layout_height="52dp"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold"
                android:visibility="visible"
                tools:visibility="visible" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView25"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/speedometer5" />

            <TextView
                android:id="@+id/resultxtmedia"
                android:layout_width="288dp"
                android:layout_height="53dp"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold"
                android:visibility="visible"
                tools:visibility="visible" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView23"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/speedometer" />

            <TextView
                android:id="@+id/resultxtmax"
                android:layout_width="130dp"
                android:layout_height="52dp"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold"
                android:visibility="visible"
                tools:visibility="visible" />

        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/abrirhis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#CB2B86CD"
        android:onClick="abrirhistorico" />

</LinearLayout>
